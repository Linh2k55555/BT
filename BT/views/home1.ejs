<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Danh sách sản phẩm</title>
        <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        header {
            background-color: rgba(0, 0, 0, 0.7);
            width: 100%;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        header h1 {
            font-size: 1.8rem;
            font-weight: bold;
            margin: 0;
            color: #fff;
        }

        header .auth-buttons a {
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        header .auth-buttons a:hover {
            background-color: #0056b3;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 20px;
            gap: 20px;
            max-width: 1000px;
            width: 90%;
            background: rgba(0, 0, 0, 0.85);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .product-list {
            flex: 3;
        }

        .product {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding: 15px;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .product img {
            width: 150px;
            height: auto;
            border-radius: 8px;
        }

        .product-details {
            flex: 1;
            margin-left: 20px;
        }

        .product h2 {
            font-size: 1.4rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 10px;
        }

        .product p {
            margin: 5px 0;
            font-size: 1rem;
            color: #ccc;
        }

        .add-to-cart {
            padding: 10px 15px;
            font-size: 1rem;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .add-to-cart:hover {
            background-color: #218838;
        }

        .cart {
            flex: 1;
            padding: 20px;
            background: rgba(0, 0, 0, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .cart h3 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.4rem;
        }

        #cart-items {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        #cart-items li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            font-size: 1rem;
            color: #fff;
        }

        #cart-total {
            font-size: 1.2rem;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }

        .remove-btn {
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .remove-btn:hover {
            background-color: #c82333;
        }

        #checkout-btn {
            display: block;
            width: 100%;
            padding: 10px 15px;
            font-size: 1rem;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            margin-top: 20px;
            text-align: center;
        }

        #checkout-btn:hover {
            background-color: #218838;
        }
        .message {
    color: #28a745; /* Màu xanh lá */
    font-weight: bold;
    background-color: rgba(0, 0, 0, 0.8); /* Nền đen mờ */
    border: 1px solid #28a745;
    padding: 15px;
    text-align: center;
    width: 90%;
    margin: 20px auto; /* Canh giữa */
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

    </style>
    </head>
    <body>
        <header>
            <h1>Danh sách sản phẩm</h1>
            <div class="auth-buttons">
                <a href="/signin">Đăng nhập</a>
                <a href="/signup">Đăng ký</a>
            </div>
        </header>
    
        <% if (message) { %>
            <div class="message"><%= message %></div>
        <% } %>
    
        <div class="container">
            <div class="product-list">
                <h2>Danh sách sản phẩm</h2>
                <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                <div class="product">
                    <img src="data:image/jpeg;base64,<%= product.image %>" alt="<%= product.name %>">
                    <div class="product-details">
                        <h2><%= product.name %></h2>
                        <p>Giá: <%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
                        <button class="add-to-cart" onclick="addToCart('<%= product._id %>', '<%= product.price %>', '<%= product.name %>')">
                            Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
                <% }) %>
                <% } else { %>
                <p>Không có sản phẩm nào được tìm thấy.</p>
                <% } %>
            </div>
    
            <div class="cart">
                <h3>Giỏ hàng</h3>
                <ul id="cart-items">
                    <% if (cart && cart.items && cart.items.length > 0) { %>
                        <% cart.items.forEach(item => { %>
                            <li>
                                <%= item.name %> - 
                                <%= item.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %> x 
                                <%= item.quantity %>
                                <button class="remove-btn" onclick="removeFromCart('<%= item.productId %>')">Xóa</button>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li>Chưa có sản phẩm nào trong giỏ hàng.</li>
                    <% } %>
                </ul>                
                <div id="cart-total">
                    Tổng cộng:
                    <%= cart && cart.items
                    ? cart.items.reduce((total, item) => total + (item.price * item.quantity), 0).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })
                    : '0 VND'
                    %>
                </div>
                <button id="checkout-btn" onclick="window.location.href='/checkout/guest'">Thanh toán</button>
            </div>
        </div>
    </body>
    <script>
        // Thêm sản phẩm vào giỏ hàng
        async function addToCart(productId, price, name) {
    try {
        const response = await fetch('/guest-cart/add', { // Đúng endpoint
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, price, name }),
        });
        const data = await response.json();
        alert(data.message || 'Thêm vào giỏ hàng thành công!');
        location.reload(); // Làm mới trang để cập nhật giỏ hàng
    } catch (error) {
        alert('Lỗi khi thêm vào giỏ hàng. Vui lòng thử lại.');
    }
}

        // Xóa sản phẩm khỏi giỏ hàng
        async function removeFromCart(productId) {
    try {
        const response = await fetch('/guest-cart/remove', { // Đúng endpoint
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId }),
        });
        const data = await response.json();
        alert(data.message || 'Đã xóa sản phẩm khỏi giỏ hàng!');
        location.reload(); // Làm mới trang để cập nhật giỏ hàng
    } catch (error) {
        alert('Đã xảy ra lỗi khi xóa sản phẩm. Vui lòng thử lại.');
    }
}

        // Chuyển đến trang thanh toán
        function checkoutCart() {
    fetch('/guest-cart/checkout', { // Sử dụng đúng endpoint
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            email: 'example@example.com',
            fullName: 'Guest User',
            address: 'Guest Address',
        }),
    })
    .then(response => response.json())
    .then(data => {
        alert(data.message || 'Thanh toán thành công!');
        location.reload();
    })
    .catch(error => {
        alert('Lỗi khi thanh toán. Vui lòng thử lại.');
    });
}

    </script>    
</html>
